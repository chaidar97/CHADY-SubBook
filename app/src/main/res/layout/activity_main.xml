<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chady.subbook.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:hint="@string/add_subscription"
        android:onClick="addSub"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="-2dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="127dp"
        android:layout_height="58dp"
        android:hint="@string/remove_subscription"
        android:onClick="removeSub"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ListView
        android:id="@+id/subs"
        android:layout_width="370dp"
        android:layout_height="424dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816"></ListView>

    <TextView
        android:id="@+id/total"
        android:layout_width="125dp"
        android:layout_height="55dp"
        android:layout_marginTop="-2dp"
        android:gravity="center"
        android:text="Total: test"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
